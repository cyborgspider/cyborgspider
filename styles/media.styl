@media screen and (max-width:1178px)
  #content article
    width   80%
    padding 0
  #project-content
    clear   both
    padding 0 0 40px 0
  #back-to-list
    text-align    left
    margin-bottom 0
  #slide-pager
    padding-left 220px
    float        none

@media screen and (max-width:768px)
  header #logo
    margin 20px auto
    float none
  nav
    clear  both
    float  none
    margin 0 auto
    width  500px
  #content article
    padding       30px 20px 0
    margin-bottom 20px
    margin-right  0
    h1 
      width 500px
  #project-content
    padding-left 20px
  #back-to-list 
    text-align center
  #content
    padding 0
  #project-nav
    top 10px
  #slide-pager
    padding-left 0
    li
      width  30px
      height 30px   
  #back-to-list
    position absolute
    bottom   0
    left     20px
  .home
    #wrap
      padding 0
    header #logo
      margin 20px auto
      float none
    h2
      font-size   36px
      line-height 48px
  #content.about 
    article 
      width 80%
    img
      display block
      margin 0 auto 10px
    p
      clear both
  
@media screen and (max-width:400px)
  header #logo
    margin-bottom:10px
  nav
    width:100%
  nav a
    clear both
    padding 5px 0
    text-align center
    float none
  #content article
    padding-top 90px
    width 70%
  #content article h1
    width 100%
  #project-content
  #slide-wrap
    width 100%
  #project-content
    padding-left 0
  #project-nav
    left 90px
  #slide-pager
    padding-left 20px
  .home h2
    font-size 24px
    line-height 34px
  #work-list 
    margin 0
  #work-list li
    width 100%
  .description p
    width 380px
    top 50px
