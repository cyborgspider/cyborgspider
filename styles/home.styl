@import '_variables'
.home
  h2
    font-size   52px
    line-height 60px
    padding     20px 0
    float       left
    clear       both
  #content
    padding  80px 0 40px

#filter-nav
  clear both
  width 300px
  margin 0 auto
  p
    float        left
    margin-right 10px
    color        #56666c
  a
    float        left
    margin-right 10px
    text-align   center
    color        $black
    &:hover
    &.active
      text-decoration underline

#work-list
  clear both
  margin-left 20px
  li
    width    220px
    height   220px
    float    left
    position relative
    margin   0 10px 10px 0
    &:hover  .description
    &.active .description
      opacity 1

.tag
  position   absolute
  left       0
  top        0
  z-index    2
  color      $black
  background #abccd8
  padding    3px 10px
  box-shadow 1px 1px 3px #666

.more
  background #c1272d
  z-index    2
  color      #fff
  position   absolute
  padding    3px 10px
  bottom     0
  right      0
  box-shadow 1px 1px 3px #666

.description
  color      #fff
  background $black
  background rgba(0,0,0,0.8)
  z-index    1
  position   absolute
  width      100%
  height     100%
  opacity    0
  transition opacity 0.2s linear
  p
    position    absolute
    width       180px
    top         40px
    left        20px
    font-weight bold