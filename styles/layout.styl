global-reset()
body
html 
  height 100%

body 
  background #fff
  font       14px/24px 'proxima-nova',Verdana, sans-serif
  color      $black

a
  text-decoration none
  color $black

p
  margin-bottom 17px

.dn
  display none

#content
  clear    both
  position relative
  padding  30px 90px
  float    left
  article
    width        280px
    margin-right 80px
    float        left
    h1
      font-size     32px
      margin-bottom 17px
      line-height   36px

header
  position relative
  #logo
    width       105px
    height      100px
    background  url(../img/logo.png) no-repeat
    ir()
    float       left
#nav-wrap
  text-transform uppercase
  height         50px
  width          100%
  background     $black
  position       fixed
  z-index        3
  left           0
  top            0
nav
  width 960px
  margin 0 auto
  a
    color        #666
    text-align   left
    float        left
    margin-right 10px
    padding      3px 10px 
    font-size    24px
    width        20%
    &:hover
    &.active
      color #4d93b1

.home
  #wrap
    padding 0 80px
  header 
    #logo
      margin 20px 0 0 20px
  h2
    font-size   52px
    line-height 60px
    margin      0 0 0 20px
    padding     20px 0
    float       left
    clear       both
  #content
    padding 0

#filter-nav
  clear both
  width 300px
  margin 0 auto
  p
    float left
    margin-right 10px
    color #56666c
  a
    float left
    margin-right 10px
    text-align center
    &:hover
    &.active
      text-decoration underline

#work-list
  clear both
  margin-left 20px
  li
    width    220px 
    height   220px
    float    left
    position relative
    margin   0 10px 10px 0
    &:hover  .description
    &.active .description
      opacity 1    

.tag
  position   absolute
  left       0
  top        0
  z-index    2
  color      $black
  background #abccd8
  padding    3px 10px
  box-shadow 1px 1px 3px #666

.more
  background #c1272d
  z-index    2
  color      #fff
  position   absolute
  padding    3px 10px
  bottom     0
  right      0
  box-shadow 1px 1px 3px #666

.description
  color      #fff
  background #000
  background rgba(0,0,0,0.8)
  z-index    1
  position   absolute
  width      100%
  height     100%
  opacity    0
  transition opacity 0.2s linear
  p
    position    absolute
    width       180px
    top         40px
    left        20px
    font-weight bold


#back-to-list
  display       block
  float         right
  padding       14px 0 0
  margin-bottom 23px
  &:before
    content "< "
  &:hover
    color #c1272d
#project-nav
  width    140px
  right    80px
  position absolute
  height   60px
  top      -30px
#prev-project
#next-project
  background  url(../img/arrows.png) no-repeat
  width       60px
  height      60px
  position    absolute
  ir()
#prev-project
  left 0
  background-position 0 100%
  &:hover
    background-position 100% 0
#next-project
  right 10px
  background-position 0 0
  &:hover 
    background-position 100% 0

#content.about
  article
    width 100%
  img
    float  right
    border solid 1px $black
    margin 0 0 10px 20px
  .visit
    display      block
    float        left
    width        70px
    margin-right 10px
  #back-to-list
    text-align left
    float      left
    clear      both

.visit
  padding 3px 10px
  background #4d93b1
  text-align center
  color #fff
  &:hover
    background #56666c

#tooltip
  position         absolute
  z-index          3000
  color            #fff
  font-size        12px
  background-color #000
  padding          0 3px

