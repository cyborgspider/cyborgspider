global-reset()
body
html
  height 100%

body
  background #fff
  font       14px/24px Verdana, sans-serif
  color      $black

a
  text-decoration none
  color $black
h1
  font-family 'Ubuntu'

p
  margin-bottom 17px
  clear         both

.dn
  display none

#wrap
  padding 0 80px
#content
  clear    both
  position relative
  padding  100px 0 40px
  overflow hidden
  article
    h1
      font-size     32px
      margin-bottom 17px
      line-height   36px
      float         left

#logo
  width       68px
  height      65px
  background  url(../img/logo.png) no-repeat
  ir()
  float        left
  margin-right 30px
  margin-top   2px
#nav-wrap
  text-transform uppercase
  height         70px
  width          100%
  background     $nav-blue
  position       fixed
  z-index        3
  left           0
  top            0
  line-height    70px
  box-shadow     0 1px 0 0 rgba(0,0,0,0.2)

nav
  padding 0 80px
  a
    color        $black
    text-align   left
    float        left
    margin-right 30px
    font-size    18px
    &:hover
    &.active
      color #fff


#project-nav
  margin-top 8px
  float    right
#prev-project
#next-project
  padding 3px 10px
  background $blue
  text-align center
  color #fff
  &:hover
    background #56666c
#prev-project
  margin-right 5px

#project-content
  img
    display       block
    margin        auto 
    margin-bottom 10px
    border        solid 1px rgba(0,0,0,0.2)

#content.about
  article
    width 100%
  img
    float  right
    border solid 1px $black
    margin 0 0 10px 20px
  .visit
    display      block
    float        left
    width        70px
    margin-right 10px
  #back-to-list
    text-align left
    float      left
    clear      both

.visit
  padding       3px 10px
  background    $blue
  text-align    center
  color         #fff
  margin-bottom 10px
  display       inline-block
  &:hover
    background #56666c
