global-reset()
body
html
  height 100%

body
  background #fff
  font       14px/24px Verdana, sans-serif
  color      $black

a
  text-decoration none
  color #fff
  &:hover
    color $black
p
  margin-bottom 16px
  clear         both
  &>a
    color $blue

.fa
  transition color 0.2s ease-out

.section-title
  font-size     28px
  margin-bottom 28px
  text-align    center
  font-family 'Ubuntu'
.dn
  display none
.left
  float left
.right
  float right

img.left
  margin-right  20px
  margin-bottom 10px

#content
  clear    both
  position relative
  padding  92px 20px 20px
  overflow hidden

.project-title
  font-size     32px
  margin-bottom 36px
  line-height   36px
  text-align center
  font-family 'Ubuntu'

#logo
  width        56px
  height       56px
  text-indent  -9999px
  float        left
  margin-top   2px
  margin-right 24px
  cursor       pointer

#nav-wrap
  text-transform uppercase
  height         60px
  width          100%
  background     $blue-nav
  position       fixed
  z-index        3
  left           0
  top            0
  line-height    60px
  box-shadow     0 1px 0 0 rgba(0,0,0,0.2)

nav
  padding 0 20px

.nav-links
  max-height 0
  overflow   hidden
  margin     0 -20px
  transition all 0.4s ease-in-out
  @media only screen and (min-width:768px)
    max-height none
    margin     0 0 0 30px
    transition none
  body.open &
    max-height 20em
    clear both
  & > a
    float      none
    text-align left
    clear      both
    width      100%
    font-size  16px
    display    block
    background $blue-nav
    border-bottom solid 1px $blue
    padding-left 24px
    &> .fa
      color white
      margin-right 10px
      @media only screen and (min-width:768px)
        display none
    @media only screen and (min-width:768px)
      float      left
      margin     0 30px 0 0
      padding    0
      clear      none
      border     none
      width      auto
      background transparent
      display    inline-block
    &.active
    &:hover
      color  $black
      &> .fa
        color $black

.nav-btn
  display   block
  position  absolute
  top       14px
  right     24px
  cursor    pointer
  font-size 32px
  color     white
  &:hover
    color $blue-light
  @media only screen and (min-width:768px)
    display none !important


.btn-nav
  margin-bottom 40px
  text-align    center
  clearfix()
  &.sns
    margin-top    20px
    margin-bottom 12px

//BUTTONS AND LINKS
.btn
  myButton()
  display inline-block
  margin-left 5px
  &>.fa
    font-size 20px
    vertical-align middle
#prev-project
  margin-left 0

.visit
  display block
  color $blue-nav
  &>.fa
   margin-right 4px
  @media only screen and (min-width:768px)
    max-width 600px
    margin-left auto
    margin-right auto

.sns-btn
  width            48px
  height           48px
  line-height      48px
  display          inline-block
  background-color $magenta
  border-radius    100%
  margin-left      8px
  &:hover
    &> .fa
      color $blue-nav
  &:first-child
    margin-left 0
  &> .fa
    font-size      24px
    color          white
    vertical-align middle
    &.fa-envelope
      margin-top -3px

//IMAGE AND PROJECTS
.img-wrap
  margin        auto
  margin-bottom 12px
  width         100%
  box-sizing border-box
  @media only screen and (min-width:768px)
    width 640px

  &>img
    max-width 100%
    height    auto
    display   block
    margin    auto
    border solid 1px $gray-light

#work-detail
  margin-bottom 20px
  article
    display none
  article.active
    display block
  @media only screen and (min-width:768px)
    p
      max-width 600px
      margin-left auto
      margin-right auto

.project-content
  clear both
  margin-bottom 24px

//CONTACT
#section-contact
  padding 40px 16% 20px
  background $blue-light
  text-align center
  @media only screen and (min-width:768px)
    padding-left 20%
    padding-right 20%
    p
      max-width 600px
      margin 0 auto

//ABOUT ME
#section-about
  padding 40px 16%
  text-align center
  @media only screen and (min-width:768px)
    padding-left  20%
    padding-right 20%
    max-width     600px
    margin        0 auto
.avatar
  width         96px
  height        96px
  border-radius 100%
  overflow      hidden
  margin        0 auto 24px
  &>img
    height 100%

//COPYRIGHT
#copyright
  padding 0 16%
  font-size 10px
  text-align center
  @media only screen and (min-width:768px)
    max-width     600px
    margin        0 auto

//Anchor
.anchor
  display block
  position relative
  top -60px