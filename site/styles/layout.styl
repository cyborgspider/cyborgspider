global-reset()
body
html
  height 100%

body
  background #fff
  font       14px/24px Verdana, sans-serif
  color      $black

a
  text-decoration none
  color #fff
  &:hover
    $black
h1
  font-family 'Ubuntu'

p
  margin-bottom 17px
  clear         both
p>a
  color $blue

.dn
  display none
.left
  float left
.right
  float right

img.left
  margin-right  20px
  margin-bottom 10px

#wrap
  padding 0 80px
#content
  clear    both
  position relative
  padding  100px 0 40px
  overflow hidden
  article
    h1
      font-size     32px
      margin-bottom 17px
      line-height   36px
      float         left

#logo
  width        64px
  height       64px
  text-indent  -9999px
  float        left
  margin-top   3px
#nav-wrap
  text-transform uppercase
  height         70px
  width          100%
  background     $blue-nav
  position       fixed
  z-index        3
  left           0
  top            0
  line-height    70px
  box-shadow     0 1px 0 0 rgba(0,0,0,0.2)

nav
  padding 0 80px
  a
    text-align   left
    float        left
    margin-right 30px
    font-size    18px
    &.active
      color  $black

.project-nav
  margin-top    8px
  margin-bottom 10px
  float         right
#prev-project
#next-project
  myButton()
  display inline-block
#prev-project
  margin-right 5px

.img-wrap
  margin        auto
  margin-bottom 10px
  border        solid 1px rgba(0,0,0,0.2)
  width         600px
  box-sizing border-box
  img
    max-width 100%
    height    auto
    display   block
    margin    auto

.visit
  myButton()
  margin     0 auto 20px

#top
  myButton()
  margin     30px auto 0

#work-detail
  article
    display none
  article.active
    display block