global-reset()
body
html
  height 100%

body
  background #fff
  font       14px/24px Verdana, sans-serif
  color      $black
  &.open
    overflow hidden

a
  text-decoration none
  color #fff
  &:hover
    $black
h1
  font-family 'Ubuntu'

p
  margin-bottom 17px
  clear         both
p>a
  color $blue
.section-title
  font-size     22px
  margin-bottom 16px
  text-align    center
.dn
  display none
.left
  float left
.right
  float right

img.left
  margin-right  20px
  margin-bottom 10px

.wrap
  padding    0 20px
  transition all 0.4s ease-out
  body.open &
    transform translateX(-200px)

#content
  clear    both
  position relative
  padding  80px 0 20px
  overflow hidden

.project-title
  font-size     32px
  margin-bottom 17px
  line-height   36px
  text-align center

#logo
  width        56px
  height       56px
  text-indent  -9999px
  float        left
  margin-top   2px

#nav-wrap
  text-transform uppercase
  height         60px
  width          100%
  background     $blue-nav
  position       fixed
  z-index        3
  left           0
  top            0
  line-height    60px
  box-shadow     0 1px 0 0 rgba(0,0,0,0.2)

nav
  padding 0 20px
  a
    text-align   left
    float        left
    margin-right 30px
    font-size    18px
    &.active
      color  $black

.nav-links
  display none
  @media only screen and (min-width:768px)
    display block

.nav-btn
  width      20px
  height     20px
  background red
  display    block
  position   absolute
  top        20px
  right      20px
  cursor     pointer
  @media only screen and (min-width:768px)
    display none

.mobile-menu
  position   fixed
  top        0
  right      -200px
  z-index    10
  width      200px
  height     100%
  background $blue
  transition all 0.4s ease-out
  body.open &
    transform translateX(-200px)

.btn-nav
  margin-bottom 20px
  text-align    center
  clearfix()

//BUTTONS AND LINKS
.btn
  myButton()
  display inline-block
  margin-left 5px
#prev-project
  margin-left 0
.visit
  display block
  color $blue-nav
.sns-btn
  width         48px
  height        48px
  line-height   48px
  display       inline-block
  background    $blue
  border-radius 100%
  margin-left   8px
  &:first-child
    margin-left 0

//IMAGE AND PROJECTS
.img-wrap
  margin        auto
  margin-bottom 10px
  border        solid 1px rgba(0,0,0,0.2)
  width         100%
  box-sizing border-box
  @media only screen and (min-width:768px)
    width 640px

  img
    max-width 100%
    height    auto
    display   block
    margin    auto

#work-detail
  margin-bottom 20px
  article
    display none
  article.active
    display block

.project-content
  clear both

//CONTACT

//ABOUT ME
.avatar
  width         96px
  height        96px
  border-radius 100%
  overflow      hidden
  margin        0 auto
  &>img
    height 100%

//COPYRIGHT
#copyright
  font-size 10px
  text-align center