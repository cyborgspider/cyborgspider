$black      = #2b3336
$blue       = #4d93b1
$blue-nav   = #51b7db
$blue-light = #b7e1f0
$blue-gray  = #56666c
$magenta    = #DB5172
$gray-light = #eee

myButton()
  background-color $blue-nav
  border-radius    2px
  box-shadow       0 1px 0 0 rgba(0,0,0,0.2)
  color            #fff
  display          inline-block
  padding          8px 16px
  text-align       center
  transition       background-color 0.2s ease-out
  &:hover
    background $blue-gray
    color #fff
